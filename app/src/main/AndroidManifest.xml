<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ensibuuko.test">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:name=".App"
        android:largeHeap="true"
        android:theme="@style/Theme.EnsibuukoTest">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EnsibuukoTest.NoActionBar">
        </activity>


        <activity android:name=".SplashScreenActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.main.AlbumActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.EnsibuukoTest.NoActionBar"/>

        <activity android:name=".ui.main.PostDetailActivity"
            android:theme="@style/Theme.EnsibuukoTest.NoActionBar"/>
        <activity android:name=".ui.main.AddPostActivity"
            android:theme="@style/Theme.EnsibuukoTest.NoActionBar"/>
    </application>

</manifest>